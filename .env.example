# H.E.R.A.-R Environment Configuration
# Copy this file to .env and adjust values as needed

# Model Configuration
MODEL_NAME=gpt2-small
DEVICE=cuda  # or "cpu" if no GPU available

# SAE Configuration
SAE_RELEASE=gpt2-small-res-jb
SAE_ID=blocks.8.hook_resid_pre

# Evolution Parameters
EVOLUTION_LEARNING_RATE=0.01
EVOLUTION_THRESHOLD=2.0
EVOLUTION_TOP_K_FEATURES=3

# Immune System Thresholds
IMMUNE_MAX_JS_DIVERGENCE=0.15
IMMUNE_MAX_PPL_SPIKE=1.5
IMMUNE_MAX_COSINE_DRIFT=0.05

# Logging
LOG_LEVEL=INFO
LOG_DIR=./logs
SAVE_CHECKPOINTS=true

# Web UI
WEB_HOST=127.0.0.1
WEB_PORT=7860
WEB_SHARE=false